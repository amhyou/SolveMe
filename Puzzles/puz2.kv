<Puz2>:
    id:puz2
    canvas.before:
        Rectangle:
            source:'image/p2/back.png'
            size:root.size

    Image:
        id:ass
        source:'image/p2/ass.png'
        size_hint:(.5,.15)
        pos_hint: {'x': .2,'center_y':.8}

    Image:
        id:germany
        source:'image/p2/germany.png'
        size_hint:(.15,.15)
        pos_hint: {'x': .68,'center_y':.8}

    Bic2:
        id:france
        num:1
        source:'image/p2/france.png'
        size_hint:(.23,.23)
        #pos_hint: {'x': .12,'center_y':.5}
        canvas.before:
            PushMatrix
            Translate:
                x:self.xx
                y:self.yy
            Rotate:
                origin:self.center
                angle:self.angle
            Scale:
                origin:self.center
                x:self.sx
                y:self.sy
        canvas.after:
            PopMatrix
    Bic2:
        id:morocco
        num:2
        source:'image/p2/morocco.png'
        size_hint:(.23,.23)
        #pos_hint: {'x': .4,'center_y':.5}
        canvas.before:
            PushMatrix
            Translate:
                x:self.xx
                y:self.yy
            Rotate:
                origin:self.center
                angle:self.angle
            Scale:
                origin:self.center
                x:self.sx
                y:self.sy
        canvas.after:
            PopMatrix
    Bic2:
        id:japan
        num:3
        source:'image/p2/japan.png'
        size_hint:(.23,.23)
        #pos_hint: {'x': .68,'center_y':.5}
       
        canvas.before:
            PushMatrix
            Translate:
                x:self.xx
                y:self.yy
            Rotate:
                origin:self.center
                angle:self.angle
            Scale:
                origin:self.center
                x:self.sx
                y:self.sy
        canvas.after:
            PopMatrix

    Button:
        id:next
        background_normal:'image/tr/next.png'
        background_down:'image/tr/next_d.png'
        background_disabled_normal:'image/tr/next.png'
        size_hint:(.15,.15)
        pos_hint: {'center_x': .9,'center_y':.4}
        opacity:0
        disabled:True
        on_release:
            app.change('puz3')
    Image:
        id:cgr
        source:'image/tr/cgr.png'
        size_hint:(.7,.15)
        pos_hint: {'center_x': .5,'center_y':.2}
        opacity:0
    Image:
        id:hnt
        source:'image/tr/hint.png'
        size_hint:(.7,.15)
        pos_hint: {'center_x': .5,'center_y':.2}
        opacity:0


    

