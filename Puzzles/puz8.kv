<Puz8>:
    canvas.before:
        Rectangle:
            source:'image/p8/back.png'
            size:root.size
	FloatLayout:
		id:biblio
		size_hint:(.8,.65)
		pos_hint: {'top': .85,'x':0}
		cols:3
		spacing:0
		padding:0

	Image:
		id:container
		source:'image/p8/container.png'
        size_hint:.2,.2
        pos_hint: {'y': .5,'right':1}


	Button:
        id:ver
        background_normal:'image/p8/button.png'
        background_down: 'image/p8/down.png'
        size_hint:.1,.1
        pos_hint: {'y': .5,'x':0}
        on_press:
        	root.verify()

    Button:
        id:eye
        background_normal:'image/p8/eye.png'
        background_down: 'image/p8/eye.png'
        size_hint:.15,.15
        pos_hint: {'y': .1,'right':1}
        on_press:
        	root.logic(0)
        on_release:
        	root.logic(1)
       

    
    Button:
        id:next
        background_normal:'image/tr/next.png'
        background_down:'image/tr/next_d.png'
        background_disabled_normal:'image/tr/next.png'
        size_hint:(.15,.15)
        pos_hint: {'right':1,'center_y':.37}
        opacity:0
        disabled:True
        on_release:
            app.change('puz9')
    Image:
        id:cgr
        source:'image/tr/cgr.png'
        size_hint:(.7,.15)
        pos_hint: {'center_x': .5,'center_y':.2}
        opacity:0
    Image:
        id:hnt
        source:'image/tr/hint.png'
        size_hint:(.7,.15)
        pos_hint: {'center_x': .5,'center_y':.2}
        opacity:0

    